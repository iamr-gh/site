---
interface Props {
  post: {
    slug: string;
    data: {
      title: string;
      pubDate: Date;
      description: string;
      author: string;
      tags?: string[];
    };
  };
}

const { post } = Astro.props;

const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', { 
    month: 'short', 
    day: 'numeric', 
    year: 'numeric' 
  });
};
---

<div class="post-line py-4 border-b border-border last:border-b-0">
  <a href={`/blog/${post.slug}`} class="flex items-center justify-between group">
    <div class="flex-1">
      <h3 class="text-lg font-medium group-hover:underline underline-offset-4 decoration-primary transition-all">
        {post.data.title}
      </h3>
      <p class="text-sm text-muted-foreground">
        {formatDate(post.data.pubDate)}
      </p>
    </div>
    <div class="flex gap-2 flex-wrap justify-end ml-4 max-w-md">
      {post.data.tags?.map(tag => (
        <span class="inline-flex items-center px-2 py-1 bg-secondary text-secondary-foreground rounded-full text-xs font-medium">
          {tag}
        </span>
      ))}
    </div>
  </a>
</div>