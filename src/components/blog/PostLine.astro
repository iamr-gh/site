---
interface Props {
  post: {
    slug: string;
    data: {
      title: string;
      pubDate: Date;
      description: string;
      author: string;
      tags?: string[];
    };
  };
}

const { post } = Astro.props;

const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', { 
    month: 'short', 
    day: 'numeric', 
    year: 'numeric' 
  });
};
---

<div class="post-line py-3 border-b border-border last:border-b-0">
  <a href={`/blog/${post.slug}`} class="block group">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2 sm:gap-4">
      <h3 class="text-base sm:text-lg font-medium group-hover:underline underline-offset-4 decoration-primary transition-all line-clamp-2">
        {post.data.title}
      </h3>
      <div class="flex flex-wrap items-center gap-2 sm:gap-4">
        {post.data.tags?.slice(0, 3).map(tag => (
          <span class="inline-flex items-center px-2 py-1 bg-secondary text-secondary-foreground rounded-lg text-xs font-medium whitespace-nowrap">
            {tag}
          </span>
        ))}
        <p class="text-xs sm:text-sm text-muted-foreground whitespace-nowrap">
          {formatDate(post.data.pubDate)}
        </p>
      </div>
    </div>
  </a>
</div>