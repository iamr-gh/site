---
interface Props {
  post: {
    slug: string;
    data: {
      title: string;
      pubDate: Date;
      description: string;
      author: string;
      tags?: string[];
      readingTime?: number;
    };
  };
  class?: string;
}

const { post, class: className = "" } = Astro.props;
---

<div class={`group ${className}`}>
  <a href={`/blog/${post.slug}`} class="block">
    <div class="border rounded-lg p-6 hover:shadow-lg transition-shadow bg-card">
      <div class="space-y-3">
        <h3 class="text-xl font-semibold group-hover:text-primary transition-colors">
          {post.data.title}
        </h3>
        <p class="text-muted-foreground text-sm mb-4">
          {post.data.pubDate.toLocaleDateString()}
        </p>
        <p class="text-muted-foreground mb-4 line-clamp-3">
          {post.data.description}
        </p>
        <div class="flex items-center justify-between">
          <div class="flex gap-2 flex-wrap">
            {post.data.tags?.map(tag => (
              <span class="inline-flex items-center px-2 py-1 bg-secondary text-secondary-foreground rounded-full text-xs font-medium">
                {tag}
              </span>
            ))}
          </div>
          {post.data.readingTime && (
            <span class="text-xs text-muted-foreground">
              {post.data.readingTime} min read
            </span>
          )}
        </div>
      </div>
    </div>
  </a>
</div>